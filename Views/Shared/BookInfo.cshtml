@model Book

@* The partial view for book info *@

<div class="card card-outline-primary m-1 p-1">
    <h5>
        @Model.title
    </h5>
    <p>
        Author: @Model.authorFirst @Model.authorMiddle @Model.authorLast
    </p>
    <p>
        Publisher: @Model.publisher
    </p>
    <p>
        ISBN: @Model.isbn
    </p>
    <p>
        Classification/Category: @Model.classification, @Model.category
    </p>
    <p>
        # of Pages: @Model.pages
    </p>
    <p>
        Price: $@Model.price
    </p>
    @*Added the add to cart button form*@
    <form id="@Model.bookId" asp-page="/ShoppingCart" method="post">
        <input type="hidden" asp-for="bookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            <button type="submit" class="btn-success btn-sm">Add to Cart</button>
        </span>
    </form>

</div>